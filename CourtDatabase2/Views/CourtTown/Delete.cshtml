@model CourtTownEditViewModel

@{
    ViewData["Title"] = "Изтриване";
}

<h1 class="text-danger">@ViewData["Title"]</h1>
<h3 class="alert-danger">Сигурен ли сте, че искате да изтриете този?</h3>
<div>
    <h4>Град</h4>
    <hr />

    <ul>
        <li>
            <div><span class="font-weight-lighter alert-warning">Съд ИД:</span> <span class="alert-info col-md-1 font-weight-bold">@Model.Id</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Съд:</span> <span class="font-weight-bold alert-info col-md-1">@Model.TownName</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Град:</span> <span class="font-weight-bold alert-info col-md-1">@Model.Address</span></div>
        </li>
    </ul>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Обратно</a>
    </form>
</div>
