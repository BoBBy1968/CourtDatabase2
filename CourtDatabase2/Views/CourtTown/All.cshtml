@using CourtDatabase2.ViewModels.CourtTown
@model IEnumerable<EditCourtTownViewModel>

@{
    ViewData["Title"] = "Всички съдебни градове";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create" >Create New</a>
</p>

<table class="table table-bordered table-hover">
@*<table class="table ">*@
    <thead>
        <tr>
            <th>
                Град
            </th>
            <th>
                Адрес
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
        <tr>
            <td>
                @t.TownName
            </td>
            <td>
                @t.Address
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@t.Id">Edit</a> |
                <a a class="btn btn-primary" asp-action="Details" asp-route-id="@t.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@t.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
