@model PaymentsEditViewModel

@{
    ViewData["Title"] = "Изтрий";
}

<h1>@ViewData["Title"]</h1>

<p>ИД на плащането: @Model.Id</p>
<p>Дата на плащане: @Model.Date.ToShortDateString()</p>
<p>Начин на плащане: @Model.PaymentSource</p>
<p>Стойност на плащане: @Model.Value</p>
<p>Дело ИД: @Model.LawCaseId</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Изтрий директно" class="btn btn-danger" /> |
    <a class="btn btn-primary" asp-action="Index">Обратно</a>
</form>