@model ExpenseEditViewModel

@{
    ViewData["Title"] = "Изтрий разноски";
}


<h1>@ViewData["Title"]</h1>


<p>
    ИД: @Model.Id
</p>
<p>
    Получател: @Model.Payee
</p>
<p>
    Описание: @Model.ExpenceDescription
</p>
<p>
    Стойност: @Model.ExpenceValue
</p>
<p>
    Дата: @Model.ExpenceDate
</p>
<p>
    Дело ИД: @Model.LawCaseId
</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Изтрий директно" class="btn btn-danger" /> |
    <a class="btn btn-primary" asp-action="Index">Обратно</a>
</form>
