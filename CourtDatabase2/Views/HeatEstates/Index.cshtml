@model IEnumerable<CourtDatabase2.Data.Models.HeatEstate>

@{
    ViewData["Title"] = "Всички имоти";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Създай нов</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbNumber)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AbNumber" class="btn btn-primary">Редактирай</a> |
                <a asp-action="Details" asp-route-id="@item.AbNumber" class="btn btn-primary">Детайли</a> |
                <a asp-action="Delete" asp-route-id="@item.AbNumber" class="btn btn-danger">Към Изтрий</a>
            </td>
        </tr>
}
    </tbody>
</table>
