@model HeatEstateInputModel

@{
    ViewData["Title"] = "Създай";
}

<partial name="_PartialView" />

<h4>Имот</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label asp-for="AbNumber" class="alert-warning"></label>
    <input asp-for="AbNumber" class="alert-info" />
    <span asp-validation-for="AbNumber" class="text-danger"></span><br />
    <label asp-for="Address" class="alert-warning"></label>
    <input asp-for="Address" class="alert-info" />
    <span asp-validation-for="Address" class="text-danger"></span><br />
