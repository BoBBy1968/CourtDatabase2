@model CourtDatabase2.Data.Models.HeatEstate

@{
    ViewData["Title"] = "Редактиране на имот";
}

<h1>@ViewData["Title"]</h1>

<h4>Имот</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="AbNumber" />
    <label asp-for="AbNumber" class="alert-warning">Абонатен номер</label>
    <input asp-for="AbNumber" class="alert-info" />
    <span asp-validation-for="AbNumber" class="text-danger"></span><br />
    <label asp-for="Address" class="alert-warning">Адрес</label>
    <input asp-for="Address" class="alert-info" />
    <span asp-validation-for="Address" class="text-danger"></span><br />
    <input type="submit" value="Запис" class="btn btn-outline-warning" />
    <a asp-action="Index" class="btn btn-info">Обратно</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
