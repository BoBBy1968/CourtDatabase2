@using CourtDatabase2.Data.Models.Enumerations
@model CourtCreateViewModel

@{
    ViewData["Title"] = "Създай съд";
    var courtTowns = this.Model.Towns.Select(x => new SelectListItem(x.Value, x.Key));
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourtType" class="control-label">Вид съд</label>
                <select asp-for="CourtType" class="form-control" asp-items="@Html.GetEnumSelectList<CourtType>()"></select>
                <span asp-validation-for="CourtType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourtTownId" class="control-label">Град и адрес</label>
                <select asp-for="CourtTownId" class="form-control" asp-items="courtTowns"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
                <input type="submit" asp-controller="CourtTown" asp-action="Create" value="Добави нов адрес" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="All">Обратно</a>
</div>

