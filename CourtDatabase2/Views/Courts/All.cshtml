@model IEnumerable<AllCourtViewModel>

@{
    ViewData["Title"] = "Всички съдилища";
}
<h1>@ViewData["Title"]</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Създай нов</a>
 
</p>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Съд
            </th>
            <th>
                Град
            </th>
            <th>
                Адрес
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>
                    @c.CourtType
                </td>
                <td>
                    @c.TownName
                </td>
                <td>
                    @c.Address
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@c.Id">Редактирай</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@c.Id">Детайли</a> |
                    <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@c.Id">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>

