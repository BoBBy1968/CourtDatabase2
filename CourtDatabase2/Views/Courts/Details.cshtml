@model CourtEditViewModel

@{
    ViewData["Title"] = "Details";
}

<partial name="_PartialView" />

<div>
    <h4>За съда</h4>
    <hr />
    <ul>
        <li>
            <div><span class="font-weight-lighter alert-warning">Съд ИД:</span> <span class="alert-info col-md-1 font-weight-bold">@Model.Id</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Съд:</span> <span class="font-weight-bold alert-info col-md-1">@Model.CourtType</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Град:</span> <span class="font-weight-bold alert-info col-md-1">@Model.Town</span></div>
        </li>
    </ul>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a> |
    <a class="btn btn-info" asp-action="Index">Обратно</a>
</div>

@section Logo {
    <img src="/logo2.jpg" height="35" />
}
