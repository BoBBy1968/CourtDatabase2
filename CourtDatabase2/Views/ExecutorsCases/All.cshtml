@model IEnumerable<ExecutorsCasesAllViewModel>

@{
    ViewData["Title"] = "Всички изпълнителни дела";
}

<partial name="_PartialView" />

<a asp-action="Create" class="btn btn-primary">Образувай изпълнително дело</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                ИД
            </th>
            <th>
                Изп. дело №
            </th>
            <th>
                година
            </th>
            <th>
                Съдебен изпълнител
            </th>
            <th>
                Длъжник
            </th>
            <th>
                Главница
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.ExecutorCaseNumber
                </td>
                <td>
                    @item.Year
                </td>
                <td>
                    @item.Executor.Name
                </td>
                <td>
                    @item.LawCase.Debitor.FirstName @item.LawCase.Debitor.LastName
                </td>
                <td>
                    @item.LawCase.Value
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Редактирай</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Детайли</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Към Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Logo {
    <img src="/logo2.jpg" height="35" />
}
