@model CourtDatabase2.ViewModels.CourtCasesViewModel

@{
    ViewData["Title"] = "Детайли";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Детайли по дело</h4>
    <hr />
    <ul>
        <li>
            <div><span class="font-weight-lighter alert-warning">Съд ИД:</span> <span class="alert-info col-md-1 font-weight-bold">@Model.Id</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Съд:</span> <span class="font-weight-bold alert-info col-md-1">@Model.CourtName</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Дело ИД:</span> <span class="font-weight-bold alert-info col-md-1">@Model.LawCaseId</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Дело №:</span> <span class="font-weight-bold alert-info col-md-1">@Model.CaseNumber</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Година:</span> <span class="font-weight-bold alert-info col-md-1">@Model.CaseYear</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Инстанция:</span> <span class="font-weight-bold alert-info col-md-1">@Model.CourtChamber</span></div>
        </li>
        <li>
            <div><span class="font-weight-lighter alert-warning">Вид дело:</span> <span class="font-weight-bold alert-info col-md-1">@Model.CaseType</span></div>
        </li>
    </ul>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a> |
    <a class="btn btn-info" asp-action="Index">Обратно</a>
</div>
