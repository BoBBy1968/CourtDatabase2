@using CourtDatabase2.Data.Models.Enumerations
@model CourtCasesInputModel

@{
    ViewData["Title"] = "Съдебно дело";
    var lawCases = this.Model.LawCases.Select(x => new SelectListItem(x.Value, x.Key));
    var courtTypes = this.Model.CourtTypes.Select(x => new SelectListItem(x.Value, x.Key));
}

<h1>Създаване</h1>

<h4>@ViewData["Title"]</h4>
<hr />
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label asp-for="CourtId" class="alert-warning">Съд</label>
    <select asp-for="CourtId" class="alert-info" asp-items="courtTypes"></select><br />
    <label asp-for="LawCaseId" class="alert-warning">Гр. Дело ИД</label>
    <select asp-for="LawCaseId" class="alert-info" asp-items="lawCases"></select><br />
    <label asp-for="CaseNumber" class="alert-warning"></label>
    <input asp-for="CaseNumber" class="alert-info" />
    <span asp-validation-for="CaseNumber" class="text-danger"></span><br />
    <label asp-for="CaseYear" class="alert-warning"></label>
    <input asp-for="CaseYear" class="alert-info" />
    <span asp-validation-for="CaseYear" class="text-danger"></span><br />
    <label asp-for="CourtChamber" class="alert-warning"></label>
    <input asp-for="CourtChamber" class="alert-info" />
    <span asp-validation-for="CourtChamber" class="text-danger"></span><br />
    <label asp-for="CaseType" class="alert-warning"></label>
    <select asp-for="CaseType" class="alert-info" asp-items="@Html.GetEnumSelectList<CaseType>();"></select>
    <span asp-validation-for="CaseType" class="text-danger"></span><br />
    <input type="submit" value="Създай" class="btn btn-outline-warning" asp-controller="CourtCases" asp-action="Create" />
    <a class="btn btn-info" asp-action="Index">Обратно</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
