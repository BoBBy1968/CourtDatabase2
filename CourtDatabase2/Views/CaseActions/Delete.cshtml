@model CaseActionsEditViewModel

@{
    ViewData["Title"] = "Изтрий действие по дела";
}

<h1>@ViewData["Title"]</h1>

<ul>
    <li>
        <div><span class="font-weight-lighter alert-warning">ИД:</span> <span class="alert-info col-md-1 font-weight-bold">@Model.Id</span></div>
    </li>
    <li>
        <div><span class="font-weight-lighter alert-warning">Действие:</span> <span class="alert-info col-md-1 font-weight-bold">@Model.LegalAction.ActionName</span></div>
    </li>
    <li>
        <div><span class="font-weight-lighter alert-warning">Дата:</span> <span class="alert-info col-md-1 font-weight-bold">@Model.Date.ToShortDateString()</span></div>
    </li>
    <li>
        <div><span class="font-weight-lighter alert-warning">Дело:</span> <span class="alert-info col-md-1 font-weight-bold">@Model.Debitor</span></div>
    </li>
</ul>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Изтрий директно" class="btn btn-danger" /> |
    <a class="btn btn-info" asp-action="Index">Обратно</a>
</form>
