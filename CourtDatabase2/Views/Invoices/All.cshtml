@model IEnumerable<InvoicesAllViewModel>


@{
    ViewData["Title"] = "Всички фактури";
}

<partial name="_PartialView" />


<a asp-action="Create" class="btn btn-primary">Създай</a>
<table class="table table-bordered table-hover" style="height:">
    <thead>
        <tr>
            <th>
                Ид
            </th>
            <th>
                Номер и дата
            </th>
            <th>
                Стойност
            </th>
            <th>
                Период
            </th>
            <th>
                Падеж
            </th>
            <th>
                Аб. №
            </th>
            <th>
                Длъжник
            </th>
            <th>
                Състояние
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Number/@item.IssueDate.ToShortDateString()
                </td>
                <td>
                    @item.Value
                </td>
                <td>
                    @item.PeriodFrom.ToShortDateString() - @item.PeriodTo.ToShortDateString()
                </td>
                <td>
                    @item.Maturity.ToShortDateString()
                </td>
                <td>
                    @item.AbNumber
                </td>
                <td>
                    @item.Debitor.FirstName @item.Debitor.LastName
                </td>
                <td>
                    @item.Condition
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Редактирай</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Детайли</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Към изтрий</a>
                </td>
            </tr>

        }
    </tbody>
</table>

@section Logo {
    <img src="/logo2.jpg" height="35" />
}
