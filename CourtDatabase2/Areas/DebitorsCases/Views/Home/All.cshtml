@model IEnumerable<DebitorsCasesAllViewModel>

@{
    ViewData["Title"] = "Това са всички длъжници с дела.";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ИД</th>
            <th>Аб. №</th>
            <th>Адрес на обекта</th>
            <th>Имена</th>
            <th>Адрес на длъжника</th>
            <th>ЕГН</th>
            <th>Главница</th>
            <th>Бр. фактури</th>
            <th>Период от</th>
            <th>Период </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Id</td>
                <td>@item.HeatEstate.AbNumber</td>
                <td>@item.AddressEstate</td>
                <td>@item.Name</td>
                <td>@item.AddressDebitor</td>
                <td>@item.EGN</td>
                <td>@item.MainValue</td>
                <td>@item.InvoiceCount</td>
                <td>@item.PeriodFrom.ToShortDateString()</td>
                <td>@item.PeriodTo.ToShortDateString()</td>
                <td>
                    <a asp-area="DebitorsCases" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Детайли</a>
                </td>
            </tr>
        }
    </tbody>
</table>